
<%= search_form_for @search do |f| %>

  


 





    <table class="highlight">
        <thead>
          <tr>
              <th><%= f.label :nombre_cont, "Nombre" %><%= f.search_field :nombre_cont %>
</th>
              <th> <%= f.label :rut_cont, "Rut" %><%= f.search_field :rut_cont %>
</th>
              <th> <%= f.label :equipo_cont, "Equipo" %><%= f.search_field :equipo_cont %></th>
              <th> <%= f.submit "Buscar" , class:"waves-effect waves-light btn" %></th>


          </tr>
          <tr>
              <th data-field="id">Nombre</th>
              <th data-field="name">Rut</th>
              <th data-field="price">Equipo</th>
          </tr>
        </thead>

<%end%>

<% @workers.each do |worker| %>


       <tbody>
          <tr>
            <td><%= link_to worker.nombre, worker %></td>
            <td><%= worker.rut %></td>
            <td><%= worker.equipo %></td>
            <td><%= link_to "Eliminar", worker, method: :delete,class:"waves-effect waves-light btn" %></td>
          </tr>

        </tbody>



<%end%>

      </table>
            



