



<%= form_for(@boss) do |f| %>
    <% @boss.errors.full_messages.each do |message| %>
      <div class="be-red white top-space">
           *<%= message %>
      </div>
    <%end%>


   <div class="container">
    <div class="row">
    <div class="col s12 m12 l12">
      <div id="form-login">
        
          <div class="row">
            <div class="blue-grey darken-3">
              <h5 class="center login-title" style="color: #FFBA22">Agregar Jefe</h5>
            </div>
          </div>




            <div class="row">
            <div class="input-field col s6">
               <i class="material-icons prefix">account_circle</i>
              <label for="name">Nombre</label>
             <%=f.text_field :nombre%>
            </div>  
            <div class="input-field col s6">
              <i class="material-icons prefix">picture_in_picture</i>
              <label for="lastname">Rut</label>
              <%=f.text_field :rut %>
            </div>            
          </div>

                <div class="row">
            <div class="input-field col s6">
               <i class="material-icons prefix">my_location</i>
              <label for="name">Direccion</label>
             <%=f.text_field :direccion%>
            </div>  
            <div class="input-field col s6">
               <i class="material-icons prefix">phone</i>
              <label for="lastname">Telefono</label>
              <%=f.text_field :telefono %>
            </div>            
          </div>


          <div class="row">
            <div class="input-field col s12">
              <i class="material-icons prefix">email</i>
              <label for="email">Correo</label>
               <%=f.text_field :mail %>
            </div>
          </div>

           <div class="row">
            <div class="col s12" style="color: #FFBA22">
              <%=f.submit "Guardar" ,class:"btn center-align"  %>
            </div>
          </div>

   </div>
</div>
</div>
</div>
             


   

 <%end%>